<!-- On vérifie la présence de photos pour continuer à afficher -->
<% if @photos %>
 
 <div class="row"> 
 		<!-- On crée une boucle pour traiter chaque photo indépendamment -->
        <% @photos.each do |photo| %>
 
             <div class="col-md-4"> 
 
                  <div class="panel panel-default"> 
 
                        <div class="panel-heading preview">
							<!-- On affiche la photo -->
                             <%= image_tag photo.image.url() %> 
 
                        </div>
						
						<div class="panel-body">
 
						      <span class="pull-right">
 
						              <%= link_to photo, remote: true, method: :delete, data: 
						                   {confirm: "Certain de vouloir supprimer cette photo?"} do %>  
				 		<!-- On ajoute remote: true pour faire appel au fichier jquery que l’on a ajouté ! -->
						
 
						               <i class="fa fa-times fa-lg"></i>
 
						               <% end %>
 
						     </span>
 
						 </div>
 
                  </div>
 
             </div>
 
       <% end %>
 
 </div>
 
 <% end %>