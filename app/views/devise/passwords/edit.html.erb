<div class=row>
	<div class="col-md-4 col-md-offset-4 text-center">
	<h2>Modification de mon mot de passe</h2>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
	  <%= render 'shared/devise_errors' %>
	  <%= f.hidden_field :reset_password_token %>

	  <div class="form-group">
	    <%= f.password_field :password, autofocus: true, class: "form-control", placeholder:"Nouveau mot de passe", autocomplete: "off" %>
	  </div>

	  <div class="form-group">
	    <%= f.password_field :password_confirmation, class: "form-control", placeholder:"Confirmer le mot de passe", autocomplete: "off" %>
	  </div>

	  <div class="actions">
	    <%= f.submit "Modification de mon mot de passe", class: "btn btn-warning" %>
	  </div>
	<% end %>
	
</div>
	
</div>